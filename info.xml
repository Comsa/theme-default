<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<name>theme-default</name>
	<version>1.0.0</version>
	<requirements>
		<minimum_version>3.0.0</minimum_version>
	</requirements>
	<thumbnail>thumbnail.png</thumbnail>
	<description>
		<![CDATA[
			Theme gemaakt door Comsa!
		]]>
	</description>
	<authors>
		<author>
			<name>Waldo Cosman</name>
			<url>http://www.comsa.be</url>
		</author>
	</authors>
	<metanavigation supported="false" />
	<templates>
		<template label="2Column" path="Core/Layout/Templates/2Column.tpl">
			<positions>
				<position name="main"/>
				<position name="left"/>
				<position name="right"/>
			</positions>
			<format>[main,main],[left,right]</format>
		</template>
		<template label="Default" path="Core/Layout/Templates/Default.tpl">
			<positions>
				<position name="main"/>
				<position name="right"/>
			</positions>
			<format>[main,main,main,right]</format>
		</template>
		<template label="Home" path="Core/Layout/Templates/Home.tpl">
			<positions>
				<position name="topLeft"/>
				<position name="topRight"/>
				<position name="main"/>
				<position name="bottomLeft"/>
				<position name="bottomMiddle"/>
				<position name="bottomRight"/>
			</positions>
			<format>[topLeft,topLeft,topLeft,topRight,topRight,topRight],[main,main,main,main,main,main],[bottomLeft,bottomLeft,bottomMiddle,bottomMiddle,bottomRight,bottomRight]</format>
		</template>
	</templates>
</theme>
